<UserControl x:Class="TinyImage.Views.APIValidation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TinyImage.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Insert API Key" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Height="33" Width="109" FontSize="15"/>
        <TextBox x:Name="APITextBox" KeyDown="OnEnterKeyDownHandler" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,160,0,0"  TextWrapping="Wrap"  Width="252" Height="26"/>
        <Label x:Name="errorLabel" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="top" Margin="0,190,0,0"  Height="34" FontSize="15" Width="244"/>
        <Button x:Name="validateButton" Content="Validate" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Height="21" Width="99" Click="validateButton_Click"/>
    </Grid>
</UserControl>
